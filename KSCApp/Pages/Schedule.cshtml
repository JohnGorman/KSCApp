@page
@model ScheduleModel
@{
    ViewData["Title"] = "Scheduled Matches";
}
<div class="topdiv">
    <div class="HomeTitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="LeagueSelect col-lg-7">
        <div>

            <form method="post" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-5 TeamPlayerSelect">
                    <label class="control-label">Select League</label>
                    <select asp-for="@Model.SSVM.CurrentLeagueId" class="form-control glyphicon-align-center" asp-items="ViewBag.LeagueId" onchange="this.form.submit()"></select>
                </div>
                @*<div class="form-group col-lg-1 TeamPlayerSelect"></div>*@
                <div class="form-group col-lg-5 TeamPlayerSelect">
                    <label class="control-label">Select Date</label>
                    <input asp-for="@Model.SSVM.SelectedDate" class="form-control" onchange="this.form.submit()" />
                </div>
            </form>
        </div>
    </div>
