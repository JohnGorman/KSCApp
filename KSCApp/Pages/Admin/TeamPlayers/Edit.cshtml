@page
@model KSCApp.Pages.Admin.TeamPlayers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Team Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeamPlayer.TeamPlayerId" />
            <div class="form-group">
                <label asp-for="TeamPlayer.Level" class="control-label"></label>
                <input asp-for="TeamPlayer.Level" class="form-control" />
                <span asp-validation-for="TeamPlayer.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPlayer.MatchesPlayed" class="control-label"></label>
                <input asp-for="TeamPlayer.MatchesPlayed" class="form-control" />
                <span asp-validation-for="TeamPlayer.MatchesPlayed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPlayer.MatchesWon" class="control-label"></label>
                <input asp-for="TeamPlayer.MatchesWon" class="form-control" />
                <span asp-validation-for="TeamPlayer.MatchesWon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPlayer.GamesWon" class="control-label"></label>
                <input asp-for="TeamPlayer.GamesWon" class="form-control" />
                <span asp-validation-for="TeamPlayer.GamesWon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPlayer.GamesLost" class="control-label"></label>
                <input asp-for="TeamPlayer.GamesLost" class="form-control" />
                <span asp-validation-for="TeamPlayer.GamesLost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPlayer.Team.TeamName" class="control-label"></label>
                <select asp-for="TeamPlayer.TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="TeamPlayer.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPlayer.Player.PlayerName" class="control-label"></label>
                <select asp-for="TeamPlayer.PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                <span asp-validation-for="TeamPlayer.PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
