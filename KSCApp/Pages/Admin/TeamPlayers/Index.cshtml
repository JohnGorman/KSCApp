@page
@model KSCApp.Pages.Admin.TeamPlayers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="HomeTitle">
    <h2>Team Players</h2>
</div>


<div class="LeagueSelect col-lg-7">
    <div class="form-horizontal">

        <form method="post" class="form-horizontal">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-lg-5 TeamPlayerSelect">
                <label class="control-label">Select Team</label>
                <select asp-for="SelectedTeam.TeamId" class="form-control" asp-items="ViewBag.TeamId" onchange="this.form.submit()"></select>
            </div>

            <div class="form-group col-lg-1 TeamPlayerSelect"></div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-lg-5 TeamPlayerSelect">
                <label class="control-label">Select League</label>
                <select asp-for="SelectedLeague.LeagueId" class="form-control" asp-items="ViewBag.LeagueId" onchange="this.form.submit()"></select>
            </div>

        </form>
    </div>
</div>


@*<p>
    <a asp-page="Create">Create New</a>
</p>*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamPlayer[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamPlayer[0].Player.PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamPlayer[0].MatchesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamPlayer[0].MatchesWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamPlayer[0].GamesWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamPlayer[0].GamesLost)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TeamPlayer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchesWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesLost)
            </td>


            <td>
                <a asp-page="./Edit" asp-route-id="@item.TeamPlayerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TeamPlayerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TeamPlayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
