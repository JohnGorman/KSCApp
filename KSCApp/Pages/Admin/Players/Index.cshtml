                @Html.DisplayNameFor(model => model.Player[0].PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].PlayerStatus)
