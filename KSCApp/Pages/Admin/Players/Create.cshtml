@page
@model KSCApp.Pages.Admin.Players.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="well">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Player.PlayerName" class="control-label"></label>
                <input asp-for="Player.PlayerName" class="form-control" />
                <span asp-validation-for="Player.PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Rank" class="control-label"></label>
                <input asp-for="Player.Rank" class="form-control" />
                <span asp-validation-for="Player.Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayerStatus" class="control-label"></label>
                @*<input asp-for="Player.PlayerStatus" class="form-control" />*@
                <select asp-for="Player.PlayerStatus" asp-items="Html.GetEnumSelectList<KSCApp.Models.PlayerStatusEnum>()" class="form-control"></select>
                <span asp-validation-for="Player.PlayerStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayingLeague" class="control-label"></label>
                <input asp-for="Player.PlayingLeague" class="form-control" />
                <span asp-validation-for="Player.PlayingLeague" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayerType" class="control-label"></label>
                <select asp-for="Player.PlayerType" asp-items="Html.GetEnumSelectList<KSCApp.Models.PlayerTypeEnum>()" class="form-control"></select>
                <span asp-validation-for="Player.PlayerType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.ContactNo" class="control-label"></label>
                <input asp-for="Player.ContactNo" class="form-control" />
                <span asp-validation-for="Player.ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.ProfilePicture" class="control-label"></label>
                <input asp-for="Player.ProfilePicture" class="form-control" />
                <span asp-validation-for="Player.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.KSCAppUser.Email" class="control-label"></label>
                <select asp-for="Player.UserId" class="form-control" asp-items="ViewBag.SelectUserId"></select>
                <span asp-validation-for="Player.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
