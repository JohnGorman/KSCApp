@page
@model KSCApp.Pages.Admin.Fixtures.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Fixture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="well">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fixture.LeagueId" class="control-label"></label>
                <select asp-for="Fixture.LeagueId" class ="form-control" asp-items="ViewBag.LeagueId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fixture.TeamA.TeamName" class="control-label"></label>
                <select asp-for="Fixture.TeamAId" class ="form-control" asp-items="ViewBag.TeamAId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fixture.TeamB.TeamName" class="control-label"></label>
                <select asp-for="Fixture.TeamBId" class ="form-control" asp-items="ViewBag.TeamBId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fixture.PlayDate" class="control-label"></label>
                <input asp-for="Fixture.PlayDate" class="form-control" />
                <span asp-validation-for="Fixture.PlayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
