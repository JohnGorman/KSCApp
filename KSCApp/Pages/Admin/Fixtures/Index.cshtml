@page
@model KSCApp.Pages.Admin.Fixtures.IndexModel

@{
    ViewData["Title"] = "Fixtures";
}

<div class="topdiv">
    <div class="HomeTitle">
        <h2>Fixtures</h2>
    </div>

    @Html.Partial("_LeagueSelectPartial", @Model.LeagueSelectVM)
    
</div>


<div class="topdiv">

    <h4>@Model.LeagueSelectVM.SelectedLeague.LeagueName</h4>

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fixture[0].PlayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fixture[0].TeamA.TeamNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fixture[0].TeamA)
                </th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Fixture[0].TeamB.TeamNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fixture[0].TeamB)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Fixture)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamA.TeamNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamA.TeamName)
                    </td>
                    <td>Vs</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamB.TeamNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamB.TeamName)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-page="Create">Create New League Fixtures and Matches</a>
    </p>
</div>





