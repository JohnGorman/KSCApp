@page
@model KSCApp.Pages.Admin.Leagues.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>League</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="League.LeagueId" />
            <div class="form-group">
                <label asp-for="League.LeagueName" class="control-label"></label>
                <input asp-for="League.LeagueName" class="form-control" />
                <span asp-validation-for="League.LeagueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.StartDate" class="control-label"></label>
                <input asp-for="League.StartDate" class="form-control" />
                <span asp-validation-for="League.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="League.Active" /> @Html.DisplayNameFor(model => model.League.Active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="League.NoOfLevels" class="control-label"></label>
                <input asp-for="League.NoOfLevels" class="form-control" />
                <span asp-validation-for="League.NoOfLevels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="League.FixturesMade" /> @Html.DisplayNameFor(model => model.League.FixturesMade)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="League.LeagueType" class="control-label"></label>
                <select asp-for="League.LeagueType" class="form-control"></select>
                <span asp-validation-for="League.LeagueType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
