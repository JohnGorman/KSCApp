@page
@model KSCApp.Pages.Admin.Leagues.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>League</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="well">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="League.LeagueName" class="control-label"></label>
                <input asp-for="League.LeagueName" class="form-control" />
                <span asp-validation-for="League.LeagueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.StartDate" class="control-label"></label>
                <input asp-for="League.StartDate" class="form-control" />
                <span asp-validation-for="League.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.Active" class="control-label"></label>
                <input asp-for="League.Active" class="form-control" />
                <span asp-validation-for="League.Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.NoOfLevels" class="control-label"></label>
                <input asp-for="League.NoOfLevels" class="form-control" />
                <span asp-validation-for="League.NoOfLevels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.FixturesMade" class="control-label"></label>
                <input asp-for="League.FixturesMade" class="form-control" />
                <span asp-validation-for="League.FixturesMade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.LeagueType" class="control-label"></label>
                <select asp-for="League.LeagueType" asp-items="Html.GetEnumSelectList<KSCApp.Models.LeagueType>()" class="form-control"></select>
                <span asp-validation-for="League.LeagueType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
