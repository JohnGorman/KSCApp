@page
@model KSCApp.Pages.Admin.KSCAppUsers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Player</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User
        </dt>
        <dd>
            @Html.DisplayFor(model => model.userAndRoleViewModel.UserName)
        </dd>
        @foreach (var role in Model.userAndRoleViewModel.Roles)
        {
            <dt>
                Role
            </dt>
            <dd>
                @role
            </dd>
        }

    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="userAndRoleViewModel.UserId" />
        <input type="submit" value="Delete" class="btn btn-primary" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
